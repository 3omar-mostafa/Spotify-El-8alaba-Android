<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:orientation = "horizontal"
        android:weightSum = "100"
        android:paddingVertical = "10dp"
        android:foreground = "?android:attr/selectableItemBackground"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

    <ImageView
            android:id = "@+id/search_item_image_view"
            android:layout_width = "0dp"
            android:layout_weight = "20"
            android:layout_height = "match_parent"
            android:contentDescription = "@string/search_result_image"
            android:layout_gravity = "center_vertical" />

    <LinearLayout
            android:paddingHorizontal = "5dp"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "65"
            android:orientation = "vertical">
        <TextView
                android:id = "@+id/search_item_name_text_view"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "Title"
                android:textSize = "25sp"
                android:textColor = "@color/white" />
        <TextView
                android:id = "@+id/search_item_info_text_view"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "Title"
                android:textSize = "20sp"
                android:layout_marginTop = "5dp"
                android:textColor = "@color/colorSecondaryText" />

    </LinearLayout>

    <ImageView
            android:id = "@+id/add_song_to_playlist_image"
            android:layout_width = "0dp"
            android:layout_weight = "15"
            android:layout_height = "wrap_content"
            android:foreground = "?android:attr/selectableItemBackground"
            android:src = "@drawable/ic_baseline_add_circle_outline_24"
            android:layout_gravity = "center_vertical" />

</LinearLayout>