<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/track_player_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/container_top_fragment"
            android:name="com.vnoders.spotify_el8alaba.ui.trackplayer.TrackTopFragment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="24dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/track_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="48dp"
                android:contentDescription="@string/song_picture_desc"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/container_bot_fragment"
            android:name="com.vnoders.spotify_el8alaba.ui.trackplayer.TrackBotFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="72dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/track_player_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@android:color/black"
            android:layerType="hardware" />

        <ImageView
            android:id="@+id/overflow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="48dp"
            android:layout_marginTop="56dp"
            android:contentDescription="@string/song_picture_desc"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/overflow_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Song name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/overflow_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_song_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Album or Artist"
            android:textColor="@color/colorSecondaryText" />

        <LinearLayout
            android:id="@+id/overflow_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_author_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/like_track_unliked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="Like"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overflow_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_like"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/hide_track_visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="Hide this song"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/overflow_hide"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:alpha="0.5"
            android:background="@color/colorSecondaryText" />

        <LinearLayout
            android:id="@+id/overflow_add_to_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_hide"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/add_song" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="Add to Playlist"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overflow_view_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_add_to_playlist"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/artist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="View Artist"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overflow_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_view_artist"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overflow_sleep_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_share"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/sleep" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="Sleep timer"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overflow_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_sleep_timer"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/report" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="Report Explicit Content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overflow_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overflow_report"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/credits" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="Show Credits"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>