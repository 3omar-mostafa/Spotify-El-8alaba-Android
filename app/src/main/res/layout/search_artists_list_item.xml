<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:id = "@+id/search_list_item_layout"
        android:padding = "8dp"
        android:background = "@drawable/playlist_item_background_ripple"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id = "@+id/search_item_image_view"
            android:layout_width = "@dimen/library_list_item"
            android:layout_height = "@dimen/library_list_item"
            android:contentDescription = "@string/search_result_image"
            android:layout_gravity = "center_vertical" />

    <TextView
            android:id = "@+id/search_item_name_text_view"
            android:paddingHorizontal = "5dp"
            android:layout_height = "match_parent"
            android:layout_width = "match_parent"
            android:gravity = "center_vertical"
            android:textStyle = "bold"
            android:text = "Title"
            android:textSize = "25sp"
            android:textColor = "@color/white" />

</LinearLayout>