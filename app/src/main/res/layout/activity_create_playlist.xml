<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical"
        android:gravity = "center"
        android:background="@drawable/create_playlist_background"
        android:padding = "64dp">

    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Give your playlist a name"
            android:textStyle = "bold"
            android:textSize = "20sp"
            android:textColor = "@color/white"
            android:paddingVertical = "24dp" />

    <EditText
            android:id="@+id/create_playlist_name"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:textSize = "30sp"
            android:textColor = "@color/white"
            android:paddingVertical = "24dp" />

    <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content">

        <Button
                android:id="@+id/create_playlist_cancel"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:background = "#00FFFFFF"
                android:textColor = "#D6D6D6"
                android:text = "cancel" />

        <Button
                android:id="@+id/create_playlist_create"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:background = "#00FFFFFF"
                android:textColor = "@color/green_login"
                android:text = "create" />

    </LinearLayout>


</LinearLayout>
